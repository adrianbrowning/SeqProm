end_of_line=lf
insert_final_newline=false
indent_style=space
indent_size=2

[{*.xsl,*.wsdl,*.xsd,*.jrxml,*.fxml,*.jhm,*.xml,*.rng,*.xslt,*.tld,*.xul,*.jnlp,*.ant}]
